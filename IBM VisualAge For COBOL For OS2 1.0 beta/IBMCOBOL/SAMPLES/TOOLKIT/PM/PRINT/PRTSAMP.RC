ACCELTABLE ID_PRTSAMP
  BEGIN
    "O",          IDM_OPEN,                 CONTROL
    "o",          IDM_OPEN,                 CONTROL
    "P",          IDM_SETUP,                CONTROL
    "p",          IDM_SETUP,                CONTROL
    "S",          IDM_PAGESETUP,            CONTROL
    "s",          IDM_PAGESETUP,            CONTROL
    "F",          IDM_SETFONT,              CONTROL
    "f",          IDM_SETFONT,              CONTROL
