#include "help.h"
#include "dlg.h"

/*
 *  Help table definition
 */
HELPTABLE   TEMPLATE_HELP_TABLE
{
    HELPITEM    IDR_MAIN,       SUBTABLE_MAIN,         PANEL_MAIN
    HELPITEM    IDD_PRODUCTINFO, SUBTABLE_PRODUCTINFODLG, PANEL_PRODUCTINFODLG
}


